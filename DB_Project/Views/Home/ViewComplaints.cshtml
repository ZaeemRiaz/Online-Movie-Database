@using DB_Project.Models
@{Session["Redirect"] = "ViewComplaints";}
@model  List<Complaint>

@{
    int i = 1;
}

<html>
<head>
    <title>View Complaints</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Complaints include:</h1>
    @foreach (Complaint c in Model)
    {
        <h3>@c.userID commented:</h3>
        <h4>@c.text (at @c.dtime)</h4>
        if (c.status != "Resolved")
        {
            <h4> <a href="../../Home/ResolveComplaintAction?complaintID=@c.complaintID">RESOLVE NOW!!!</a></h4>
        }
        i = i + 1;
    }
</body>
</html>