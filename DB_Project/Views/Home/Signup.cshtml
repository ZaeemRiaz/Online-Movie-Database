@using DB_Project.Models
@{
    ViewBag.Title = "Signup";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Sign Up</title>
</head>
<style>
    body {
        background-color: #F1FBFB;
    }

    #formwrapper {
        width: 300px;
        height: auto;
        background-color: #F1FBFB;
    }

    form {
        width: 400px;
        height: auto;
        background-color: black;
    }

    fieldset {
        background-color: #F1FBFB;
        border: solid;
        padding-bottom: 10px;
    }

    h1 {
        font-family: "Trebuchet MS", Helvetica, sans-serif;
        font-size: 24px;
        color: #000;
    }

    label {
        width: 250px;
        display: block;
        font-family: "Trebuchet MS", Helvetica, sans-serif;
        color: #000;
        margin-top: 5px;
        margin-right: 0px;
        margin-bottom: 5px;
        margin-left: 0px;
    }

    input {
        width: 250 px;
        border: thin solid #6CF;
        margin-bottom: 10px;
    }

    textarea {
        width: 250 px;
        border: thin solid #6CF;
        margin-bottom: 10px;
    }

    .btn {
        width: 50px;
        height: 20px;
        font-family: "Trebuchet MS", Helvetica, sans-serif;
        color: #FFF;
        font-weight: bold;
        background-color: #6CF;
        margin-left: 10px;
        float: left;
    }
</style>

<script>

function validateform()
{
	var name=document.signupform.name.value;
	var email=document.signupform.email.value;
	var password=document.signupform.password.value;

	if (name=="" || email=="" || password==""){
  		alert("Name, Email or Password can't be blank");
  		return false;
	}
	var re = /^(([^<>()[]\.,;:s@"]+(.[^<>()[]\.,;:s@"]+)*)|(".+"))@(([[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}])|(([a-zA-Z-0-9]+.)+[a-zA-Z]{2,}))$/igm;
	if ($email.val() == '' || !re.test($email.val()))
	{
    	alert('Please enter a valid email address.');
    	return false;
	}
}
</script>

<body>
    <div class="container">
        <div class="content">
            <center><img src="FilmIndex.png" width:"1000" height:"200"</center>
            <hr>
            <center> <h1> <a href="index.html">Index</a> | <a href="signup.html">Sign Up</a> | <a href="login.html">Login</a></h1></center>
        </div>
    </div>
    <hr>
    <center>
        <div id="formwrapper">
            <form action="../../Home/SignupAction" method="post" name="signupform" onsubmit="return validateform()">
                <fieldset>
                    <h1>Create new account</h1>
                    <label for="email">Your Email:</label>
                    <input name="email" type="email" size="50" maxlength="100" pattern="[a-z0-9._%+-]+&#64[a-z0-9.-]+\.[a-z]{2,50}$">
                    <label for="name">Your Name:</label>
                    <input name="name" type="text" size="50" maxlength="100" pattern="[A-Za-z ]{3,100}">
                    <label for="password">Password:</label>
                    <input type="password" required name="password" size="50" maxlength="100" accesskey="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,50}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                    <label for="Account Type:">Your Account Type:</label>
                    <select name="usertype">
                        <option value="U" selected>User</option>
                        <option value="A">Administrator</option>
                    </select>
                    <br>
                    <label for="date">Date of Birth:</label>
                    <input type="date" required name="dateOfBirth" />
                    <br>
                    <!-- textarea name="message cols="40" rows= 10" </textarea> -->
                    <br>
                    <input class="btn" name="submit" type="submit" value="Send">
                </fieldset>
            </form>

    </center>
</body>
</html>
